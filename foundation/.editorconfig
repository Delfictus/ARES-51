# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# Rust files
[*.rs]
indent_size = 4
max_line_length = 100

# TOML files
[*.toml]
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = 80

# Shell scripts
[*.sh]
indent_size = 2

# Makefiles
[Makefile]
indent_style = tab

# Dockerfile
[Dockerfile*]
indent_size = 4

# C/C++ files (for CUDA)
[*.{c,cc,cpp,cu,cuh,h,hpp}]
indent_size = 4
max_line_length = 100

# Python files
[*.py]
indent_size = 4
max_line_length = 88

# JavaScript/TypeScript
[*.{js,jsx,ts,tsx}]
indent_size = 2
max_line_length = 100

# MLIR files
[*.mlir]
indent_size = 2

# Git config files
[.git*]
indent_size = 2